<section class="w3-main w3-padding-16" style="margin-left:260px;margin-right:10px">


  <!-- Boxes -->

    <div class="w3-row-padding w3-center w3-margin-top">


    <div class="w3-threequarter">


      <div class="w3-card w3-container" style="min-height:300px">
      <h3 class="w3-text-theme"><b>Settings</b></h3><br>
      <p >Change password</p>
      <p class="w3-text-blue" id="returnValue"></p>
      <form>
      <input placeholder="old" id="i1" class="w3-input" name="password" type="password">
      <input placeholder="new" id="i2" class="w3-input" name="new" type="password">
      <input type="submit" class="w3-button" onclick="changePassword()">
      </form>
      </div>
    </div>




{{ include("footer.twig") }}

</section>

<script>



function changePassword() {
event.preventDefault();
$.post( "/sys/user/changePassword.php", { password: $('#i1').val(), new:$('#i2').val() })
  .done(function( data ) {
      $('#returnValue').html(data);

  });
}

</script>

